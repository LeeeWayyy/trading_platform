  "info": {
    "description": "Real-time market data streaming from Alpaca",
    "title": "Market Data Service",
    "version": "1.0.0"
  },
  "openapi": "3.1.0",
  "paths": {
    "/api/v1/subscribe": {
      "post": {
        "description": "Subscribe to real-time quotes for symbols.\n\nArgs:\n    request: List of symbols to subscribe to\n\nReturns:\n    Subscription confirmation with current subscriptions\n\nRaises:\n    HTTPException: If subscription fails",
        "operationId": "subscribe_symbols_api_v1_subscribe_post",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SubscribeRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SubscribeResponse"
                }
              }
            },
            "description": "Successful Response"
          },
          "422": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            },
            "description": "Validation Error"
          }
        },
        "summary": "Subscribe Symbols"
      }
    },
    "/api/v1/subscribe/{symbol}": {
      "delete": {
        "description": "Unsubscribe from a symbol.\n\nArgs:\n    symbol: Symbol to unsubscribe from\n\nReturns:\n    Unsubscription confirmation\n\nRaises:\n    HTTPException: If unsubscription fails",
        "operationId": "unsubscribe_symbol_api_v1_subscribe__symbol__delete",
        "parameters": [
          {
            "in": "path",
            "name": "symbol",
            "required": true,
            "schema": {
              "title": "Symbol",
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UnsubscribeResponse"
                }
              }
            },
            "description": "Successful Response"
          },
          "422": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            },
            "description": "Validation Error"
          }
        },
        "summary": "Unsubscribe Symbol"
      }
    },
    "/api/v1/subscriptions": {
      "get": {
        "description": "Get list of currently subscribed symbols.\n\nReturns:\n    List of subscribed symbols",
        "operationId": "get_subscriptions_api_v1_subscriptions_get",
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SubscriptionsResponse"
                }
              }
            },
            "description": "Successful Response"
          }
        },
        "summary": "Get Subscriptions"
      }
    },
    "/api/v1/subscriptions/stats": {
      "get": {
        "description": "Get subscription manager statistics.\n\nReturns detailed stats about auto-subscription including:\n- Whether auto-subscription is running\n- Execution Gateway URL\n- Sync interval\n- Last known position count and symbols\n- Currently subscribed symbols\n\nReturns:\n    Dictionary with subscription manager stats",
        "operationId": "get_subscription_stats_api_v1_subscriptions_stats_get",
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "additionalProperties": true,
                  "title": "Response Get Subscription Stats Api V1 Subscriptions Stats Get",
                  "type": "object"
                }
              }
            },
            "description": "Successful Response"
          }
        },
        "summary": "Get Subscription Stats",
        "tags": [
          "Subscriptions"
        ]
      }
    },
    "/health": {
      "get": {
        "description": "Health check endpoint with WebSocket status.\n\nReturns:\n    Health status including WebSocket connection state",
        "operationId": "health_check_health_get",
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HealthResponse"
                }
              }
            },
            "description": "Successful Response"
          }
        },
        "summary": "Health Check"
      }
    }
  }
}